    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python : Flask dev",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port=1234",
                // "--no-reload"
                "--host=0.0.0.0"
            ],
            "jinja": true
        },
        {
            "name": "Python : Flask prod",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi",
                "FLASK_ENV": "production",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}